<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <hr>
  <div class="text-right"></div>
  <div class="row">
    <div class="col-4">
      <%= f.input :user_id, label: "Usuario", as: :select, collection: User.all - [ current_user ], label_method: -> (u) { u.email } %>
    </div>
    <div class="col-4">
      <%= f.input :role, label: "Rol", as: :select, collection: Participant.roles, value_method: -> (r) { r[0] } %>
    </div>
    <div class="col-4 text-left">
      <div class="mt-2">
        <button type="button" data-action="nested-form#remove" class="btn btn-warning btn-sm btn-flat mt-4">Eliminar participante</button>
        <%= f.input :_destroy, as: :hidden %>
      </div>
    </div>
  </div>
  <br>
</div>
