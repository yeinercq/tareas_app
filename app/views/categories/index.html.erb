<div class="categories index-page">
  <div class="card">
    <div class="card-body">
      <h1>Lista de categorias</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Decripcion</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td><%= link_to t('common.show'), category %></td>
              <td><%= link_to t('common.edit'), edit_category_path(category) %></td>
              <td><%= link_to t('common.destroy'), category, data: { turbo_method: :delete, turbo_confirm: t('common.are_you_sure') } %></td>
            </tr>
          <% end %>
        </tbody>
        <br>
        <div class="text-right">
          <%= link_to "Nueva Categoria", new_category_path, class: 'btn btn-info' %>
        </div>
      </table>
    </div>
  </div>
</div>
